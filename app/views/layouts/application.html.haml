%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'} 
    %title
      mediaclue
      =PROJECT_NAME

    = stylesheet_link_tag "3linien", :media => "all"
    = stylesheet_link_tag "application_3linien", :media => "all"
    = stylesheet_link_tag "spiffy", :media => "all"
    = stylesheet_link_tag "media", :media => "all"
    = javascript_include_tag :defaults, 'uploader', 'hoverimage', 'swfobject.js'
  %body
    #container
      #header

        .left
          = link_to(image_tag('logo.png', :width => 137, :height => 75, :style => 'vertical-align:text-bottom'), root_url)
          %span{:class => "title"}
            = PROJECT_NAME
        #service
          - if logged_in?
            Benutzer:&nbsp;
            = current_user.full_name
          &nbsp;&nbsp;
          - if logged_in?
            = link_to('Abmelden', :controller => 'account', :action => 'logout')
        .clear

      #menu
        - menu_items = []
        - if logged_in?
          -  menu_items.concat([ link_to('Suchen', media_path), link_to('Meine Ãœbersicht', media_sets_path), link_to('Hochladen', uploader_media_set_path(current_user.uploading_media_set))])
        
        - if URL_TO_EXTERNAL_HELP
          - menu_items << link_to('Hilfe', URL_TO_EXTERNAL_HELP, :target => 'blank')
        = menu_items.join(' | ')
        &nbsp;
      - if not flash[:notice].blank?
        #flash{:class => "notice"}= flash[:notice]
      - if not flash[:error].blank?
        #flash{:class => "error"}= flash[:error]
      #hauptinhalt
        = yield
        %br{:class => "clear"}
      %br{:class => "clear"}
      #footer
        %p
          mediaclue wurde entwickelt von: <a href="http://www.kshp.ch" target="_blank">Gymnasium Hohe Promenade</a> &amp; <a href="http://www.mindclue.ch" target="_blank">mindclue gmbh</a>
