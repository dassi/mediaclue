-if @enable_ordering
  =medium_image_tag(preview, :thumbnail)
-else
  - small_preview ||= false
  -if small_preview
    - js_onmouseover = "showtrail('#{preview.public_filename(:medium)}','#{escape_javascript(preview.name)}','',true,351);"
    = medium_image_tag(preview, :thumbnail, :onmouseover => js_onmouseover, :onmouseout => "hidetrail();")
  -else
    =medium_image_tag(preview, :medium)