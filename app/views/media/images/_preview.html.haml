-if @enable_ordering
  =medium_image_tag(preview, :thumbnail)
-else
  -if defined?(small_preview) and small_preview
    =medium_image_tag(preview, :thumbnail, :onmouseover => "showtrail('#{preview.public_filename(:medium)}','#{escape_javascript(preview.name)}','#{escape_javascript(preview.desc ? preview.desc.ellipsis(150) : nil)}','1',351,1);", :onmouseout => "hidetrail();")
  -else
    =medium_image_tag(preview, :medium)