- div_id = "mediaplayer#{preview.id}"
- small_preview ||= false
- width = small_preview ? 150 : 350

%div{:id => div_id}

:javascript
  var so = new SWFObject('/mediaplayer/player.swf','ply','#{width}','20','9','#ffffff');
  so.addParam('allowfullscreen','false');
  so.addParam('allowscriptaccess','always');
  so.addParam('wmode','opaque');
  so.addVariable('file','#{preview.public_filename}');
  so.addVariable('skin', '/mediaplayer/skins/simple.swf');
  so.write('#{div_id}');
