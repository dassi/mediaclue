- div_id = "mediaplayer#{preview.id}"
%div{:id => div_id}

:javascript
  var so = new SWFObject('/mediaplayer/player.swf','ply','150','100','9','#ffffff');
  so.addParam('allowfullscreen','true');
  so.addParam('allowscriptaccess','always');
  so.addParam('wmode','opaque');
  so.addVariable('file','#{preview.public_filename}');
  so.addVariable('skin', '/mediaplayer/skins/simple.swf');
  so.write('#{div_id}');
