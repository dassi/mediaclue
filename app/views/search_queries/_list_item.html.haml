- simple ||= false
%tr
  %td{:style => 'width:300px'}
    %strong= link_to h(list_item.name), search_result_path(:query_id => list_item)
  - if not simple
    %td{:style => 'width:100px;white-space:nowrap'}
      - if list_item.notifications_enabled
        = image_tag('tick.png', :class => 'icon')
      - else
        = image_tag('delete_out.png', :class => 'icon')
      = link_to 'Auto-Email', toggle_notifications_search_query_path(list_item), :method => :post, :title => 'Automatische Email ein/aus'
    %td<
      &rsaquo;&nbsp;
      = link_to 'Löschen...', search_query_path(list_item), :method => :delete, :confirm => 'Wirklich löschen?'
